<div class="index-container">

<h1>Socios</h1>

<%= link_to 'Create New Socio', new_socio_path %>

<% @socios.each do |socio| %>
  <h2 class="socio"><%= link_to socio.title, socio %></h2>
  <h2 class="socio"><%= link_to socio.description, socio %></h2>

  <% if socio.image? %>
      <%= image_tag socio.image.url , width: "20%"%>
  <% end %>

  <% if socio.video? %>
      <video width="320" height="240" controls>
        <source src="<%= socio.video.url %>" type="video/mp4">
      </video>
  <% end %>

  <% if socio.user.avatar? %>
      <div class="user-info">
        <p>Posted by <%= image_tag socio.user.avatar.url , width: "3%", class: "round-image" %> <%= socio.user.email %> on <%= socio.created_at.strftime("%B %d, %Y") %></p>
      </div>
  <% else %>
      <p>Posted by <%= socio.user.email %> on <%= socio.created_at.strftime("%B %d, %Y") %></p>
      
  <% end %>

  <p class="meta">
    <p>Name: <%= socio.user.name %></p>
    <p>Dob: <%= socio.user.dob %></p>
    <p>Gender: <%= socio.user.gender %></p>
  </p>
  <div class="actions">
    <p>
      <%= link_to 'Delete', socio_path(socio), method: :delete, data: { confirm: 'Are you sure you want to delete this Socio?' }, class: 'btn btn-danger' %>
    </p>
    <!--h2><%= link_to socio.title, socio %></h2-->
  





  </div>
  <br>
  <br>
<% end %>

</div>