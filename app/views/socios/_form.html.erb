<%= form_with(model: @socio, local: true) do |form| %>
  <!-- ... Existing fields ... -->
  
  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  
  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
  
  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :image %>
  </div>
  
  <div class="field">
    <%= form.label :video %>
    <%= form.file_field :video %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
